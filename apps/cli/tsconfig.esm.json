{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2020",
    "outDir": "dist/esm",
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "coverage/**", "dist/**", "tests/**"]
}
